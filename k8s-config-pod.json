{
  "apiVersion" : "v1",
  "kind" : "Pod",
  "metadata": {
    "name": "shoe-store-pod",
    "namespace": "default",
    "labels": {
      "app": "shoe-store"
    }
  },
  "spec" : {
    "containers": [{
      "name": "shoe-store",
      "image": "registry.ng.bluemix.net/banksy-ns/shoe-store:latest",
      "ports": [{
          "name": "shoe-store",
          "protocol": "TCP",
          "containerPort": 8080
        }
      ],
      "env": [
        {
          "name": "GATEWAYURL",
          "value": "http://184.173.1.189:31273/open-banking"
        },
        {
          "name": "EXTERNALURL",
          "value": "http://184.173.1.189:8080"
        }
      ]
    }]
  }
}